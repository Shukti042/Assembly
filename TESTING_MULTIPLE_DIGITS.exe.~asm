.MODEL SMALL
.STACK 100H
.DATA
COUNTER DW 0;
.CODE
MAIN PROC
MOV AH,1
INT 21H ;TAKES INPUT IN AL AS ASCII VALUE
MOV BX,AX
SUB BX,'0' ;EXTRACTS INTEGER VALUE FROM ASCII VALUE
INT 21H
SUB AX,'0'
ADD AX,BX
MOV BX,10
DIV BX
ADD DX,'0' ;CONVERTS TO ASCII VALUE BECAUSE DISPLAY IS ALWAYS IN ASCII
MOV AH,9
INT 21H
;RETURN TO DOS
MOV AH,4CH
INT 21H
MAIN ENDP
END MAIN





