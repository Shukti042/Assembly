.MODEL SMALL
.STACK 100H
.DATA
.CODE
MAIN PROC
MOV AH,1
INT 21H ;TAKES INPUT IN AL AS ASCII VALUE
MOV BL,AL
SUB BL,'0' ;EXTRACTS INTEGER VALUE FROM ASCII VALUE
INT 21H
SUB AL,'0'
ADD BL,AL
MOV DL,BL
ADD DL,'0' ;CONVERTS TO ASCII VALUE BECAUSE DISPLAY IS ALWAYS IN ASCII
MOV AH,2
INT 21H
;RETURN TO DOS
MOV AH,4CH
INT 21H
MAIN ENDP
END MAIN





